<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo"
    android:shadowColor="#000000"
    android:shadowDx="0"
    android:shadowDy="0"
    android:shadowRadius="5">
    <TextView
        android:id="@+id/tvb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Búsqueda por código"
        android:textAlignment="center"
        android:textColor="#A8A8A8"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et_cod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/etcodigo"
        android:hint="Ingrese el código"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textSize="25dp"
        android:drawableStart="@drawable/codigo"
        android:drawablePadding="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:inputType="number"
        />
    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="buscar"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:onClick="alta"
        android:textColor="#FFFFFF"
        android:background="@drawable/btnguardar"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:drawableRight="@drawable/check"
        android:paddingRight="100dp"
        android:drawablePadding="-110dp"
        />
    <TextView
        android:id="@+id/tv_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X"
        android:textAlignment="center"
        android:textColor="#A8A8A8"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        />

</LinearLayout>