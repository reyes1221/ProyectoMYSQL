<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#66D8E0"
    tools:context=".Login">
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textColor="#00080E"
        android:textSize="45dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="25dp"
        />
    <EditText
        android:id="@+id/etnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/etcodigo"
        android:hint="Nombre de usuario"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textSize="25dp"
        android:drawableStart="@drawable/person"
        android:drawablePadding="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"

        />
    <EditText
        android:id="@+id/etcontrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:hint="ContraseÃ±a"
        android:layout_marginTop="10dp"
        android:background="@drawable/etdesc"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textSize="25dp"
        android:drawableStart="@drawable/contrasena"
        android:drawablePadding="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        />
    <Button
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOG-IN"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:onClick="alta"
        android:textColor="#FFFFFF"
        android:background="@drawable/btnguardar"
        android:shadowColor="#A8A8A9"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:paddingRight="2dp"
        android:drawablePadding="-100dp"
        android:layout_marginBottom="25dp"
        />

</LinearLayout>